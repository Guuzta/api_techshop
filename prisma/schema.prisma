generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  password  String   
  email     String   @unique
  createdAt DateTime @default(now())
  sessions  Session[]
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int
  isValid   Boolean  @default(true)   
  createdAt DateTime @default(now())
  expiresAt DateTime 

  user User @relation(fields: [userId], references: [id])
}