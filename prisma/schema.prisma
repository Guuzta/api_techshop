generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  password  String   
  email     String   @unique
  createdAt DateTime @default(now())
  sessions  Session[]
  products Product[]
}

model Session {
  id        Int      @id @default(autoincrement())
  userId    Int   
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

model Product {
  id           Int      @id @default(autoincrement())
  userId       Int
  name         String
  description  String   
  price        Float
  stock        Int      @default(0)
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}